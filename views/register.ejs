<%- include("partials/header") %>
<div class="container-fluid mt-5">
	<h1 class="main text-center">Consumer registration</h1>
	<div class="row justify-content-center">
		<form class="form-signin" action="/register" method="POST">
			<div class="form-group">
				<input type="text" class="form-control" name="username" placeholder="Username" required>
			</div>
			<div class="form-group">
				<input type="password" class="form-control" name="password" placeholder="Create new password" required>
			</div>
			<div class="form-group">
				<textarea class="form-control" name="address" placeholder="Home Address" rows="3" required></textarea>
			  </div>
			<button class="btn btn-primary form-control" type="submit">Let's GO!</button>
		</form>
	</div>
</div>
<%- include("partials/footer") %>